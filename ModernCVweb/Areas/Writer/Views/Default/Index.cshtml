@using EntityLayer.Concrete
@model List<Annonccement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@{
    string color = " ";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == "Yeni yazı")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Status == "Ders içeriği")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Status == "Eğitimim")
                            {
                                color = "badge badge-info";
                            }
                            <tr>
                                <th>@item.ID</th>
                                <td>@item.Tittle</td>
                                <td>@(((DateTime) item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnonccementDetails/@item.ID" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
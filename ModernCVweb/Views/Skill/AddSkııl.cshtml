@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "AddSkııl";
    Layout = "~/Views/Shared/NewTAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yetenek Ekleme Paneli</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x=>x.Tittle , new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    @Html.TextBoxFor(x=>x.Value , new {@class="form-control"})
                </div>
                <button type="submit" class="btn btn-outline-success">Kaydet</button>
                <button class="btn btn-outline-danger">İptal</button>
            </form>
        </div>
    </div>
</div>

@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkııl";
    Layout = "~/Views/Shared/NewTAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSkııl", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Yetenek Düzenleme Paneli</h4>

                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x=>x.SkillID , new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Tittle , new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Değer</label>
                        @Html.TextBoxFor(x=>x.Value , new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-outline-success">Güncelle</button>
                    <button class="btn btn-outline-danger">İptal</button>
                </form>
            </div>
        </div>
    </div>
}
@using EntityLayer.Concrete
@model List<Message>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Son Mesajlar</h6>
    @foreach(var item in Model)
    {
    <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item" href="/TMessage/ShowTMessage/@item.MessageID">
        <div class="preview-thumbnail">
                <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/Template/assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
        </div>
        <div class="preview-item-content">
            <p class="preview-subject ellipsis mb-1">@item.Name bir mesaj göndeerdi</p>
                <p class="text-muted mb-0"> @(((DateTime)item.Date).ToString("dd-MMM-yyyy")) </p>
        </div>
    </a>
    }
    <div class="dropdown-divider"></div>
    <p class="p-3 mb-0 text-center">3 Yeni Mesaj</p>
</div>


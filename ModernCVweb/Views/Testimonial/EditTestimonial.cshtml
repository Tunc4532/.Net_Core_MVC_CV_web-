@model EntityLayer.Concrete.Testimonial


@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/NewTAdminLayout.cshtml";
}





@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Referans Düzenleme Paneli</h4>

                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x=>x.TestimonialID , new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.ClientName , new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        @Html.TextBoxFor(x=>x.Company , new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Tittle , new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        @Html.TextBoxFor(x=>x.ImageUrl , new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Değer</label>
                        @Html.TextAreaFor(x=>x.Comment,8,3, new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-outline-success">Güncelle</button>
                    <button class="btn btn-outline-info">İptal</button>
                </form>
            </div>
        </div>
    </div>
}